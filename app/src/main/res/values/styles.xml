<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="btn_style">
        <item name="android:drawableRight">@drawable/sel_enable</item>
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.NoAnim" parent="AppTheme">
        <item name="android:activityOpenEnterAnimation">0</item>
        <item name="android:activityCloseEnterAnimation">0</item>
        <item name="android:activityCloseExitAnimation">0</item>
        <item name="android:activityOpenExitAnimation">0</item>
    </style>

</resources>
